@model IEnumerable<Dominio.LogicaAplicacion.DTOs.UsuarioDTO>

@{
    ViewData["Title"] = "Index";
}

@if (!string.IsNullOrEmpty(ViewBag.Error))
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<h1>Usuarios</h1>

<h3>Filtrar Usuarios por monto</h3>

<form method="post">
    <input type="number" name="monto" />
    <input type="submit" value="Filtrar" />
</form>

@if (Model.Count() == 0)
{
    <div class="alert alert-warning">No hay ningun usuario con pagos que superen ese monto</div>
}
else
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Equipo)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Equipo.Nombre)
                    </td>

                </tr>
            }
        </tbody>
    </table>
}


