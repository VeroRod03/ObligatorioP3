@using Dominio.Enumerations
@using Dominio.LogicaAplicacion.DTOs
@model Dominio.LogicaAplicacion.DTOs.UsuarioDTO

@{
    ViewData["Title"] = "Create";
}

@if (!string.IsNullOrEmpty(ViewBag.Mensaje))
{
    <div class="alert  alert-success">@ViewBag.Mensaje</div>
}
@if (!string.IsNullOrEmpty(ViewBag.Error))
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<h1>Crear Usuario</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Apellido" class="control-label"></label>
                <input asp-for="Apellido" class="form-control" />
                <span asp-validation-for="Apellido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contra" class="control-label"></label>
                <input asp-for="Contra" class="form-control" type="password"/>
                <span asp-validation-for="Contra" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Equipo" class="control-label">Equipo</label>
                <select name="EquipoId" id="Equipo" class="form-control" required>
                    @foreach (EquipoDTO equipo in ViewBag.Equipos)
                    {
                        <option value=@equipo.Id>@equipo.Nombre</option>
                    }
                    <span asp-validation-for="Equipo" class="text-danger"></span>
                </select>
            </div>
            <div class="form-group">
                <label for="Rol" class="control-label">Rol</label>
                <select name="Rol" id="Rol" class="form-control" required>
                    <option value="@RolUsuario.EMPLEADO">@RolUsuario.EMPLEADO</option>
                    <option value="@RolUsuario.GERENTE">@RolUsuario.GERENTE</option>
                    <<span asp-validation-for="Rol" class="text-danger"></span>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
