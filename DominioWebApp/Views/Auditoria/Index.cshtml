@using DominioWebApp.DTOs

@model IEnumerable<DominioWebApp.DTOs.AuditoriaDTO>

@{
    ViewData["Title"] = "Index";
}

@if (!string.IsNullOrEmpty(ViewBag.Error))
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<h1>Auditorias</h1>

<form method="post">
    <select name="TipoGastoId" id="TipoGastoId" class="form-control" required>
        @foreach (TipoGastoDTO gastoDTO in ViewBag.TipoGastos)
        {
            <option value="@gastoDTO.Id">@gastoDTO.Nombre</option>
        }
    </select>
    <input type="submit" value="Filtrar" />
</form>

@if(Model.Count() == 0)
{
    <div class="alert alert-warning">No hay auditorias para ese tipo de gasto.<br>
                                    Seleccione un tipo de gasto para ver sus auditorias</div>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Accion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Fecha)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UsuarioId)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Accion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fecha)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UsuarioId)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}